{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfig": {
      "startCommand": "gunicorn server:app -b 0.0.0.0:$PORT"
    }
  },
  "deploy": {
    "healthcheckPath": "/",
    "healthcheckTimeout": 200,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
} 